{
  "name": "real-time-payments",
  "version": "1.0.0",
  "description": "Real-time payment processing system with Kafka, Node.js, and Next.js",
  "scripts": {
    "start": "./start.sh",
    "dev": "./start.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "install:all": "npm run backend:install && npm run frontend:install",
    "backend:start": "cd backend && npm start",
    "frontend:start": "cd frontend && npm run dev",
    "setup": "npm run install:all && npm run docker:up"
  },
  "keywords": [
    "fintech",
    "payments",
    "kafka",
    "real-time",
    "nodejs",
    "nextjs",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/real-time-payments.git"
  }
}
